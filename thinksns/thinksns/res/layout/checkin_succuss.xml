<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="80dp">
    
    <ImageView
        android:id="@+id/checkin_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:src="@drawable/smily_ok" />

    <TextView
        android:id="@+id/checkin_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/checkin_img"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="签到成功！"
        android:singleLine="true"
        android:textSize="24sp" 
        android:textColor="@color/common_dark"/>
    <TextView
        android:id="@+id/checkin_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/checkin_img"
        android:layout_below="@+id/checkin_status"
        android:paddingTop="5dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="已经连续签到10天"
        android:singleLine="true"
        android:textSize="18sp" 
        android:textColor="@color/common_dark"/>

</RelativeLayout>
