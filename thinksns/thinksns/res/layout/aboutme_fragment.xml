<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- profile image -->

            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/m_head"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/mushishi" />
                <!-- image corner -->

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/cover" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/m_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="username"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/m_sex"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                </LinearLayout>

                <TextView
                    android:id="@+id/m_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="address"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/changeinfo"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/sel_but"
                    android:text="修改" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/common_grey"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/m_weibo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tab_but"
                    android:drawableBottom="@drawable/weibowds"
                    android:text="@string/myweibonum"
                    android:textColor="@color/common_blue" />

                <Button
                    android:id="@+id/m_follow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tab_but"
                    android:drawableBottom="@drawable/followwds"
                    android:text="@string/myfollownum"
                    android:textColor="@color/common_blue" />

                <Button
                    android:id="@+id/m_followme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tab_but"
                    android:drawableBottom="@drawable/followerswds"
                    android:text="@string/followmenum"
                    android:textColor="@color/common_blue" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/aboutme_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dip"
                        android:layout_marginRight="28dip"
                        android:layout_marginTop="20dip"
                        android:text="详细资料" />

                    <Button
                        android:id="@+id/m_uid"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dip"
                        android:layout_marginRight="28dip"
                        android:layout_marginTop="20dip"
                        android:background="@drawable/sel_but"
                        android:gravity="center"
                        android:paddingTop="5dip"
                        android:text="uid"
                        android:textColor="#ff333333"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dip"
                        android:layout_marginRight="28dip"
                        android:layout_marginTop="28dip"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/m_uname1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/sel_but"
                            android:gravity="center"
                            android:text="uname"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/m_email"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-8dip"
                            android:background="@drawable/sel_but"
                            android:gravity="center"
                            android:text="email"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/m_sex1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-8dip"
                            android:background="@drawable/sel_but"
                            android:gravity="center"
                            android:text="sex"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/m_add"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-8dip"
                            android:background="@drawable/sel_but"
                            android:gravity="center"
                            android:text="address"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>