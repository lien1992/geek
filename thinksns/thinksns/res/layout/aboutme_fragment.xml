<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- profile image -->

                <FrameLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp" >

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/mushishi" />
                    <!-- image corner -->

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/cover" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="username"
                            android:textSize="20dp" />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/male" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="address"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/selfinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="selfinfo"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/information"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="私信" />

                    <Button
                        android:id="@+id/follow"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="关注" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/common_grey"
                    android:orientation="horizontal" >

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/tab_but1"
                        android:drawableBottom="@drawable/weibowds"
                        android:text="@string/myweibonum"
                        android:textColor="@color/common_blue" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/tab_but2"
                        android:drawableBottom="@drawable/followwds"
                        android:text="@string/myfollownum"
                        android:textColor="@color/common_blue" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/tab_but1"
                        android:drawableBottom="@drawable/followerswds"
                        android:text="@string/followmenum"
                        android:textColor="@color/common_blue" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/login_btn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dip"
                        android:layout_marginRight="28dip"
                        android:layout_marginTop="20dip"
                        android:background="@drawable/myinfo_but"
                        android:gravity="center"
                        android:paddingTop="5dip"
                        android:text="uid"
                        android:textColor="#ff333333"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/login_btn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dip"
                        android:layout_marginRight="28dip"
                        android:layout_marginTop="20dip"
                        android:background="@drawable/myinfo_but"
                        android:gravity="center"
                        android:paddingTop="5dip"
                        android:text="friends"
                        android:textColor="#ff333333"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/login_input"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dip"
                        android:layout_marginRight="28dip"
                        android:layout_marginTop="28dip"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/login_btn"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/myinfo_but"
                            android:gravity="center"
                            android:text="uname"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/login_btn"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-8dip"
                            android:background="@drawable/myinfo_but"
                            android:gravity="center"
                            android:text="email"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/login_btn"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-8dip"
                            android:background="@drawable/myinfo_but"
                            android:gravity="center"
                            android:text="sex"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/login_btn"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-8dip"
                            android:background="@drawable/myinfo_but"
                            android:gravity="center"
                            android:text="address"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/login_btn"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-8dip"
                            android:background="@drawable/myinfo_but"
                            android:gravity="center"
                            android:text="selfinfo"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>