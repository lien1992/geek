<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white"
    android:orientation="vertical" >

    <com.thinksns.jkfs.ui.view.RoundAngleImageView
        xmlns:app="http://schemas.android.com/apk/res/com.thinksns.jkfs"
        android:id="@+id/wb_cmt_user_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="8dp"
        app:roundHeight="5dp"
        app:roundWidth="5dp" />

    <RelativeLayout
        android:id="@+id/wb_cmt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/wb_cmt_user_img" >

        <TextView
            android:id="@+id/wb_cmt_u_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textColor="@color/green"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/wb_cmt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wb_cmt_u_name"
            android:layout_marginTop="4dp"
            android:padding="2dp"
            android:text="评论内容"
            android:textColor="#444444"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/wb_cmt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/wb_cmt_u_name"
            android:layout_alignParentRight="true"
            android:text="2014年5月27日"
            android:textColor="@color/grey"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/wb_cmt_content"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/lv_divider" />

</RelativeLayout>