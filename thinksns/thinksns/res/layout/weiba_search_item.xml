<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pure_white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/weiba_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="start"
        android:scaleType="fitXY"
        android:src="@drawable/mushishi" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1" 
        android:paddingLeft="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/weiba_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:text="今天心情"
            android:singleLine="true"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/weiba_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weiba_name"
            android:ellipsize="end"
            android:gravity="left"
            android:text="遠方的人啊？"
            android:textColor="@color/grey"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" 
        android:padding="5dp">

        <TextView
            android:id="@+id/follower_count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:text="粉丝数："
            android:textColor="@color/grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/follower_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/follower_count_label"
            android:gravity="left"
            android:text="10"
            android:textColor="@color/grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/thread_count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/follower_count_label"
            android:gravity="left"
            android:text="帖子数："
            android:textColor="@color/grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/thread_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/follower_count_label"
            android:layout_toRightOf="@+id/thread_count_label"
            android:gravity="left"
            android:text="10"
            android:textColor="@color/grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/follow_weiba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="关    注"
            android:textColor="@color/pure_white"
            android:textSize="15sp" 
            android:background="@drawable/weiba_button"/>
    </RelativeLayout>

</LinearLayout>